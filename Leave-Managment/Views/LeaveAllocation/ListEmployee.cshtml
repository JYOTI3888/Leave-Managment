                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    <a class="btn btn-outline-success" asp-route-id="@item.Id" asp-action="Details"></a><i class="fa fa-search">Details</i>

